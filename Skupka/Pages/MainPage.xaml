<Page x:Class="Skupka.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Skupka.Pages"
      mc:Ignorable="d" 
     d:DesignHeight="720" d:DesignWidth="1280"
      Title="MainPage">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Центр скупки техники" FontFamily="Bahnschrift SemiBold" Foreground="Gray" HorizontalAlignment="Center" FontSize="60"  FontWeight="Bold"></TextBlock>
            <TextBlock Text="Cash-in Store" FontFamily="Bahnschrift SemiBold" HorizontalAlignment="Center" FontSize="60"  FontWeight="Bold"></TextBlock>
            <Button Margin="0 100 0 0" Width="200"  Height="40" Content="Войти" FontFamily="Roboto" FontSize="24" Click="AuthorizationPageBtnClick"></Button>
            <Button Margin="0 100 0 0" Width="300" Height="40" Content="Регистрация" FontFamily="Roboto" FontSize="24" Click="RegistrationPageBtnClick"></Button>
        </StackPanel>
    </Grid>
</Page>
